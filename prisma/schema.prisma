// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id @default(uuid())
  discordId    String      @unique
  totalScore   Int         @default(0)
  updateTime   DateTime    @updatedAt
  createdAt    DateTime    @default(now())
  DailyImage   DailyImage? @relation(fields: [dailyImageId], references: [id])
  dailyImageId String?

  @@index([dailyImageId, totalScore])
}

model Room {
  id               String   @id @default(uuid())
  channel_id       String   @unique
  owner_discord_id String
  createdAt        DateTime @default(now())
  players          Player[]
}

model Player {
  id         String   @id @default(uuid())
  channel_id String
  room       Room     @relation(fields: [channel_id], references: [channel_id])
  discordId  String
  sequence   Int
  prompt     String
  totalScore Int
  createdAt  DateTime @default(now())

  @@index([channel_id])
}

model DailyImage {
  id     String @id @default(uuid())
  url    String
  round  Int    @default(1) // count how many rounds have passed
  prompt String
  users  User[]
}
